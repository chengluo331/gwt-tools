<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="org.tbiq.gwt.tools.rpcservice.stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %-6r %-5p %c - %m%n" />
		</layout>
	</appender>

	<logger name="org.tbiq.gwt.tools.rpcservice.server">
		<level value="error" />
	</logger>

	<root>
		<level value="fatal" />
		<appender-ref ref="org.tbiq.gwt.tools.rpcservice.stdout" />
	</root>

</log4j:configuration>
